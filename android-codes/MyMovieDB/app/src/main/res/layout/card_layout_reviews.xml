<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:outlineAmbientShadowColor="@color/blue"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/review_nameAndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By who who when when"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/review_voting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/5 0/5"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/review_voting"
                android:src="@drawable/ic_baseline_star_rate_24" />
        </RelativeLayout>


        <TextView
            android:id="@+id/review_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="contentcontentcon
            tentcontentcontent
            contentcontentcontentcontentcon
            tentcontenttentcontentcontenttentcon
            tentcontenttentcontentcontent"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>