<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="0dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:foreground="@drawable/trending_gradient_shape"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/watchlist_mediaType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/image_view"
            android:layout_alignBottom="@id/image_view"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Type"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/watchlist_removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/image_view"
            android:layout_alignBottom="@id/image_view"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:drawableBottom="@drawable/ic_baseline_remove_circle_outline_24" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>